<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:padding="20dp" android:layout_height="match_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_marginBottom="5dp" android:layout_height="wrap_content"
		android:text="@string/crt_gallery_title" />
	<EditText android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="5dp" />
	<TextView android:layout_width="wrap_content"
		android:layout_marginBottom="5dp" android:layout_height="wrap_content"
		android:text="@string/crt_gallery_desc_man" />
	<EditText android:id="@+id/description" android:layout_width="fill_parent"
		android:singleLine="false" android:lines="5" android:layout_height="wrap_content"
		android:layout_marginBottom="5dp" />
	<TextView android:id="@+id/error_msg" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_marginTop="10dp"
		android:textColor="#FF0000" />
</LinearLayout>
