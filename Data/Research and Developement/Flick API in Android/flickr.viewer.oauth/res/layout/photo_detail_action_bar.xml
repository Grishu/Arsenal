<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="5dp" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<ImageView android:id="@+id/user_icon" android:layout_width="48dp"
		android:src="@drawable/contacts" android:clickable="true"
		style="?android:attr/imageWellStyle" android:layout_height="48dp"
		android:layout_gravity="center_vertical" />
	<TextView android:id="@+id/user_name" android:layout_width="0dp"
		android:layout_marginLeft="5dp" android:layout_height="wrap_content"
		android:layout_gravity="left|center" android:layout_weight="1" />
	<ProgressBar android:id="@+id/progress"
		android:layout_width="48dp" android:layout_height="48dp"
		android:layout_gravity="center_vertical" />
	<ImageView android:id="@+id/btn_show_on_map"
		android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/location"
		android:background="@drawable/action_bar_item" android:layout_gravity="center_vertical"
		android:clickable="true" android:visibility="invisible" />
	<!-- <ImageView android:layout_width="wrap_content" android:background="@drawable/action_bar_item" 
		android:clickable="true" android:src="@drawable/commands" android:layout_height="fill_parent" 
		android:id="@+id/commands" /> -->
</LinearLayout>
