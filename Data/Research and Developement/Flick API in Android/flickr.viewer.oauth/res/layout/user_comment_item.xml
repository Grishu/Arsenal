<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="?android:attr/activatedBackgroundIndicator"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight">
	<ImageView android:id="@+id/buddy_icon"
		android:src="@drawable/contacts"
		android:layout_alignParentLeft="true" android:paddingLeft="5dp"
		android:layout_alignParentTop="true" android:paddingTop="5dp"
		android:layout_width="48dp" android:layout_height="48dp"
		android:scaleType="centerCrop" />
	<TextView android:id="@+id/author" android:layout_toRightOf="@id/buddy_icon"
		android:layout_marginTop="5dp"
		android:paddingLeft="5dp" android:layout_alignTop="@id/buddy_icon"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<TextView android:id="@+id/commentDate"
		android:layout_marginTop="5dp" android:layout_below="@id/author"
		android:layout_alignParentRight="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/comment" android:layout_below="@id/commentDate"
		android:layout_alignLeft="@id/author" android:layout_width="fill_parent"
		android:paddingLeft="5dp"
		android:layout_marginTop="5dp" android:layout_height="wrap_content" />

</RelativeLayout>
