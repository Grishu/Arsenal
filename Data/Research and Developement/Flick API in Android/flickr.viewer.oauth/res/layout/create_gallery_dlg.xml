<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:minWidth="450dp"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<com.gmail.charleszq.ui.comp.CreateGalleryComponent
		android:id="@+id/crt_gallery" android:layout_height="0dp"
		android:layout_weight="1" android:layout_width="fill_parent" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" android:padding="5dp">
		<Button android:id="@+id/btn_ok" android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/ok_btn" />
		<Button android:id="@+id/btn_cancel" android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/cancel_btn" />
	</LinearLayout>
</LinearLayout>
