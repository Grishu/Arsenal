<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:minWidth="450dp" android:layout_height="fill_parent"
	android:padding="5dp">

	<EditText android:id="@+id/edit_comment" android:layout_width="fill_parent"
		android:singleLine="false" android:layout_height="0dp"
		android:gravity="left|top" android:lines="10" android:layout_weight="3" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" android:padding="5dp">
		<Button android:id="@+id/btn_comment_ok" android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/submit_btn" />
		<Button android:id="@+id/btn_cancel" android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/cancel_btn" />
	</LinearLayout>

</LinearLayout>
